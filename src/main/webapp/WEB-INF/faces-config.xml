<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 
    <lifecycle>
        <phase-listener>gob.gobernacionsd.listeners.AuthListener</phase-listener>
    </lifecycle>
    
    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>non-responsive-login</from-outcome>
            <to-view-id>/templates/forms/non-responsive-login-form.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/templates/forms/login-form.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create-post</from-outcome>
            <to-view-id>/templates/forms/create-post-form.xhtml</to-view-id>    
            <redirect/>        
        </navigation-case>
        <navigation-case>
            <from-outcome>app-main</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin-app-main</from-outcome>
            <to-view-id>/admin/admin-welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create-user</from-outcome>
            <to-view-id>/templates/forms/create-user-form.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
</faces-config>

<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 
    <lifecycle>
        <phase-listener>gob.gobernacionsd.listeners.AuthListener</phase-listener>
    </lifecycle>
    
    <application>
        <action-listener>org.primefaces.application.DialogActionListener</action-listener>
        <navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
        <view-handler>org.primefaces.application.DialogViewHandler</view-handler>
    </application>
    <application>
     <resource-handler>org.omnifaces.resourcehandler.CDNResourceHandler</resource-handler>
 </application>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>login-form</from-outcome>
            <to-view-id>/templates/forms/login-form.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create-post</from-outcome>
            <to-view-id>/admin/forms/create-post-form.xhtml</to-view-id>    
            <redirect/>        
        </navigation-case>
        <navigation-case>
            <from-outcome>app-main</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin-app-main</from-outcome>
            <to-view-id>/admin/views/welcome.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>post-management-view</from-outcome>
            <to-view-id>/admin/views/post-management-view.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>post-edit</from-outcome>
            <to-view-id>/admin/views/post-edit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>users-view</from-outcome>
            <to-view-id>/admin/views/users-view.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>create-user</from-outcome>
            <to-view-id>/admin/forms/create-user-form.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>read-post-view</from-outcome>
            <to-view-id>/templates/views/post-read-view.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/templates/views/noticias.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>read-post-view</from-outcome>
            <to-view-id>/templates/views/post-read-view.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    
    <navigation-rule> 
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>app-noticias</from-outcome>
            <to-view-id>/templates/views/noticias.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>app-sobre-nosotros</from-outcome>
            <to-view-id>/templates/views/sobre-nosotros.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>app-servicios</from-outcome>
            <to-view-id>/templates/views/servicios.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>app-recursos-humanos</from-outcome>
            <to-view-id>/templates/views/recursos-humanos.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>app-organigrama</from-outcome>
            <to-view-id>/templates/views/organigrama.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>app-nomina</from-outcome>
            <to-view-id>/templates/views/nomina.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>app-contacto</from-outcome>
            <to-view-id>/templates/views/contacto.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/admin/views/post-management-view.xhtml</from-view-id>
        <navinavigation-case>
            <from-outcome>post-edit</from-outcome>
            <to-view-id>/admin/forms/post-edit</to-view-id>
        </navinavigation-case>
    </navigation-rule>
    
</faces-config>
